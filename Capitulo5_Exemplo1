from dotenv import load_dotenv
import os

# Carrega as variáveis de ambiente do arquivo .env
load_dotenv()

# Agora você pode acessar as variáveis como qualquer outra variável de ambiente
openai_key = os.getenv("OPENAI_API_KEY")
serpapi_key = os.getenv("SERPAPI_API_KEY")

if not openai_key or not serpapi_key:
    print("Erro: As chaves de API OPENAI_API_KEY e SERPAPI_API_KEY não estão configuradas no arquivo .env")
    exit()
else:
    print("Chaves de API carregadas com sucesso!")